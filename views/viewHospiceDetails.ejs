    <body>
        <header>      
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="/">Home</a></li>
                        <li><a href="/getAllHospice">Hospice</a></li>                    
                        <li><a href="/getAllBehavioral">Behavioural Health</a></li>
                        <li><a href="/getAllAssistedLiving">Assisted Living</a></li>
                        <li><a href="/getAllAcute">Acute Facility</a></li> 
                        <% if (isAuthenticated) { %>  
                          <% if (!isAdmin) { %>  
                            <li><a href="/getuserInfo">User Info</a></li> 
                          <% } %>
                          <% if (isAdmin) { %>  
                          <li><a href="/getPendingUsers">User Approvals</a></li> 
                          <% } %>
                        <% } %>
                    </ul>
                    <ul>  
                        <% if (!isAuthenticated) { %>                
